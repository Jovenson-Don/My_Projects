<%- include("partials/header") %>

<div class="container">
  <form action="/submit" method="POST">
    <div class="form-group">
      
      <label for="subject">Subject/Title</label>
      <input
        required
        name="subject"
        type="name"
        class="form-control"
        aria-describedby="subject"
        placeholder="Why did the chicken cross the road?"
      >
      <small id="emailHelp" class="form-text text-muted">
        We'll never share your email with anyone else.
      </small>
    </div>

    <div>
      <label for="exampleFormControlTextarea1">Write Blog</label>
      <textarea
        required
        name="blog"
        class="form-control"
        id="exampleFormControlTextarea1"
        rows="8"
        placeholder="To be or not be. That is the question......"
      ></textarea>

      <label for="name">Name</label>
      <input
        required
        name="full_name"
        type="name"
        class="form-control"
        id="exampleInputEmail1"
        aria-describedby="emailHelp"
        readonly
        value="<%= userInfo.fname %> <%= userInfo.lname %>"
      >
      <br>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<%- include("partials/footer.ejs") %>
