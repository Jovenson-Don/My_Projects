<%- include("partials/header") %>

<div class="modal modal-sheet position-static d-block p-4 py-md-5" tabindex="-1" role="dialog" id="modalSheet">
  <div class="modal-dialog">
    <div class="modal-content rounded-4 shadow">
      <div class="modal-header border-bottom-0">
        <h1 class="modal-title fs-5"><%= locals.data["full_name"] %></h1>
      </div>
      <div class="modal-body py-0">
        <p><%= locals.data["blog"] %></p>
      </div>
      <div class="modal-footer flex-column align-items-stretch w-100 gap-2 pb-3 border-top-0">
        <button type="button" class="btn btn-lg btn-primary" id="edit">Edit</button>
        <button name="blog" type="submit" class="btn btn-lg btn-secondary" data-bs-dismiss="modal" onclick="window.location.href='/delete'">Delete</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById("edit").addEventListener('click', function () {
    window.location.href = "/view"
  });
</script>

